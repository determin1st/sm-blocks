						cursor: grabbing
						> .page.x > button
							cursor: grabbing
							box-shadow: inset 0 0 0.1em 0.15em white
				&.flexy
					> .range > .gap > svg
						fill: gainsboro
					> .range.active > .gap > svg
						fill: silver
				&.hovered
					> .sep > svg
						fill: slategray
