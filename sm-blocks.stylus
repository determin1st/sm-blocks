// helpers {{{
cv(c)
	s('%s,%s,%s', red(c), green(c), blue(c));
rgba(cv,alpha=1)
	s('rgba(%s,%s)', cv, alpha);
// }}}
// fonts {{{
WebSafeFontMono = Consolas, Courier, monospace
WebSafeFontFat = 'Arial Black', 'Arial Bold', Gadget, sans-serif
WebSafeFontUI = Verdana, Helvetica, Arial, sans-serif
WebSafeFontTitle = Times, 'Times New Roman', serif
// }}}
:root // {{{
	// SIZE
	--sm-size-factor: 1    // size reduction factor 0-100%
	--sm-size-height: 48px // default vertical base for the frame
	// COLORS
	// base
	--sm-color-0: cv(black)
	--sm-color-1: cv(white)
	// container
	--sm-color-2: cv(silver)
	--sm-color-3: cv(gainsboro)
	// item
	--sm-color-4: cv(darkslategray)
	--sm-color-5: cv(slategray)
	// highlight
	--sm-color-6: cv(darkslateblue)
	--sm-color-7: cv(slateblue)
// }}}
.sm-blocks
	// base {{{
	// configuration
	--height: calc(var(--sm-size-height) * var(--sm-size-factor))
	--font-size: calc(0.3334 * var(--height))
	// root
	position:   relative
	box-sizing: border-box
	min-width:  0
	min-height: 0
	padding:    0
	margin:     0
	//overflow:   hidden
	font-size:  var(--font-size)
	// common {{{
	div,button,select,input,label,svg,img,hr,h1,h2,h3
		box-sizing: border-box
		min-width:  0
		min-height: 0
		margin:  0
		padding: 0
		outline: 0
		border:  0
		background-color: transparent
	button,input,optgroup,select,textarea,label,h3
		font-family: inherit
		font-size:   1em
		font-weight: bold
		line-height: 1.25
		outline:     0
		text-transform:  none
		text-decoration: none
		// text overflow block
		text-overflow: ellipsis
		overflow:      hidden
		white-space:   nowrap
		word-break:    break-all
		overflow-wrap: anywhere // modern word-break
		&:focus
			outline: 0
	svg
		display: block
		width:  100%
		height: 100%
		shape-rendering: geometricPrecision
	button
		cursor: pointer
		color:  transparent
		> svg
			fill:   transparent
			stroke: transparent
	// }}}
	// rootBox
	> div
		position: relative
		min-width:  0
		min-height: 0
		opacity: 0
		overflow: hidden
		pointer-events: none
	// placeholder
	> svg
		display:  block
		position: absolute
		top:    0
		left:   0
		width:  100%
		height: 100%
	svg
		fill: alpha(silver, 0.2)
	// constructed state
	&.v
		> div
			opacity: 0.6
			// functional state
			&.v
				pointer-events: auto
				opacity: 1
		> svg
			display: none
		// focused state
		&.f
			> div.v
				box-shadow: inset 0px 0px 4px 1px alpha(slateblue, 0.4)
				border-radius: 2px
	// }}}
	button.w3-button // {{{
		font-size: var(--height)
		width:  100%
		height: 1.05em
		////
		background-color: rgba(var(--sm-color-3))
		box-shadow: inset 0 0 0.2em 0 rgba(var(--sm-color-2))
		border-style: solid
		border-color: rgba(var(--sm-color-2))
		border-width: 0.025em
		border-radius: 0.04em
		////
		touch-action: none // pointer events only
		cursor: default
		> .label
			width:  100%
			height: 100%
			display: flex
			flex-direction: row
			align-items: center
			justify-content: center
			line-height: 0
			user-select: none
			pointer-events: none
			////
			font-size: 0.334em
			font-family: WebSafeFontFat
			font-weight: bold
			text-decoration: none
			letter-spacing: 0
			background-color: transparent
			color: rgba(var(--sm-color-5))
		////
		&.v
			cursor: pointer
			// hovered
			&.h
				border-color: rgba(var(--sm-color-0), 0.65)
				> .label
					font-weight: bolder
					color: rgba(var(--sm-color-4))
			// focused
			&.f
				background-color: rgba(var(--sm-color-2), 0.5)
				border-color: rgba(var(--sm-color-6), 0.65)
				border-width: 0.05em
				box-shadow: inset 0 0 0 1px rgba(var(--sm-color-1))
				> .label
					font-weight: bolder
					color: rgba(var(--sm-color-7))
				&.h
					background-color: rgba(var(--sm-color-6), 0.125)
					> .label
						color: rgba(var(--sm-color-6))
			// pending (not locked, awaiting, may recieve focus)
			&.w,
			&.w.h,
			&.w.f
				cursor: default
				background-color: rgba(var(--sm-color-3), 0.5)
				box-shadow: inset 0 0 0 0.02em rgba(var(--sm-color-1))
				border-color: rgba(var(--sm-color-0))
				> .label
					font-size: 0.313em
					color: rgba(var(--sm-color-2))
			&.w.f
				background-color: rgba(var(--sm-color-6), 0.125)
		// }}}
	button.sm-checkbox // {{{
		width:  100%
		height: 100%
		border-style: none
		border-width: 0
		background-color: transparent
		color: transparent
		pointer-events: none
		> svg
			display: block
			width:  100%
			height: 100%
			> .a
				fill: transparent
			> .b
				fill-rule: evenodd
				fill: slategray
			> .c
				fill-rule: evenodd
				fill: gainsboro
			> .d
				fill: transparent
			> .e
				fill: transparent
		&.x0 > svg
			// -1=intermediate (disabled)
			> .d
				fill: darkslategray
		&.x0.i > svg
			// -1=intermediate (changeable)
			> .e
				fill: darkslategray
			> .d
				fill: transparent
		&.x1 > svg
			// 0=off
		&.x2 > svg
			// 1=on
			> .c
				fill: transparent
			> .d
				fill: darkslategray
			> .e
				fill: darkslategray
		&.v
			pointer-events: auto
			&.x0
				pointer-events: none
				&.i
					pointer-events: auto
			&.h
				&.x1 > svg
					> .a
						fill: alpha(slategray, 0.3)
				&.x2 > svg
					> .d
						fill: slategray
					> .e
						fill: slategray
			&.f
				//filter: brightness(110%)
				&.x1 > svg
					> .a
						fill: alpha(slateblue, 0.3)
					> .b
						fill: slateblue
					> .c
						fill: silver
				&.x2 > svg
					> .d
						fill: slateblue
					> .e
						fill: slateblue
	// }}}
	.sm-buttons > button // {{{
		width:   100%
		height:  100%
		display: flex
		align-items: center
		justify-content: center
		////
		background-color: gainsboro
		color: slategray
		box-shadow: inset 0 0 0.4em 0 silver
		border-style: solid
		border-color: silver
		border-width: 0.05em
		border-radius: 0.1em
		////
		font-family: WebSafeFontFat
		font-size: var(--font-size)
		text-decoration: none
		letter-spacing: 0
		touch-action: none // pointer events only
		> svg
			fill: slategray
		&:hover,
		&:focus,
		&:active
			font-weight: bolder
			border-color: darkslategray
			color: darkslategray
			> svg
				fill: darkslategray
		&:focus,
		&:active
			background-color: silver
			box-shadow: inset 0 0 0 0.01em white
		// }}}
	.sm-blocks-select // {{{
		// root
		font-size: var(--height)
		width:  auto
		min-width: 2.1em
		height: 1em
		////
		position: relative
		display: flex
		flex-direction: row
		align-items: stretch
		justify-content: flex-start
		pointer-events: none
		> select // {{{
			flex: 1 1 0
			font-size: var(--font-size)
			padding-top:    0
			padding-bottom: 0
			padding-left:   1em
			padding-right:  var(--height)
			////
			-webkit-appearance: none
			-moz-appearance: none
			appearance: none
			display: block
			////
			background-color: gainsboro
			color: transparent
			box-shadow: inset 0 0 0.6em 0 silver
			border-style: solid
			border-color: silver
			border-width: 0.025em
			border-radius: 0.05em
			outline: none
			////
			font-family: WebSafeFontFat
			font-weight: bold
			text-align: left
			text-decoration: none
			text-overflow: ellipsis
			letter-spacing: 0
			white-space: nowrap
			&:-ms-expand
				display: none
		// }}}
		> svg // {{{
			position: absolute
			top: 0
			right: 0
			width:  1em
			height: 100%
			pointer-events: none
			fill: silver
			> .b
				fill: transparent
		// }}}
		&.a
			> select
				color: darkslateblue
			> svg
				> .a
					fill: alpha(slateblue, 0.6)
		&.v
			pointer-events: auto
			> select
				color: slategray
				cursor: pointer
				> option
					color: darkslategray
					background-color: gainsboro
					border: 1px solid red
					&:checked
						color: alpha(slateblue, 0.6)
					&:hover
						background-color: black
						color: white
			> svg
				> .a
					fill: silver
				> .b
					fill: slategray
			&.h
				> select
					color: darkslategray
					border-color: darkslategray
			&.f
				> select
					color: darkslategray
					background-color: silver
					border-color: darkslategray
					box-shadow: inset 0 0 0 0.04em white
				> svg
					> .a
						fill: slategray
					> .b
						fill: gainsboro
	// }}}
	// ===
	&.section // {{{
		// root
		width:  100%
		height: auto
		// rootBox
		> div.item // {{{
			padding: 2px 2px 2px 2px
			> .title
				height: calc(4px + 1em)
				padding: 2px 5px 2px 5px
				> div
					> h3 > label
						font-size: 0.66em
						font-weight: bold
					> button.arrow
						min-width: 1.2em
						padding: 0.25em 0.2em 0.15em 0.4em
			> .section
				padding: 4px 4px 4px 4px
			> .sep
				height: 5px
				padding: 0
				fill: gainsboro
			// closed
			&.o0
				> .title
					padding-left:  3px
					padding-right: 3px
					> div > h3
						padding-left: 6px
				> .sep
					padding-left:  0
					padding-right: 0
			// opened
			&.o1
				> .title
					> div > h3
						padding-left: 8px
				> .sep
					padding-left:  2px
					padding-right: 2px
			// focused and hovered
			&.v.f.h1
				> .section
					opacity: 0.6
		// }}}
		// child
		.item
			// locked
			// {{{
			font-size: var(--height)
			display: flex
			flex-direction: column
			align-items: stretch
			justify-content: flex-start
			> .title
				height: 0.8em
				padding: 0.05em 0 0.05em 0
				> div
					width:  100%
					height: 100%
					display: flex
					flex-direction: row
					align-items: stretch
					justify-content: flex-start
					border-radius: 2%
					> h3 // {{{
						flex: 1 1 0
						padding-left: 0.1em
						////
						display: flex
						align-items: center
						color: slategray
						background-color: transparent
						cursor: pointer
						user-select: none
						> label
							font-family: WebSafeFontUI
							font-size: 0.36em
							//font-weight: bold
							letter-spacing: 0
							cursor: pointer
					// }}}
					> button // {{{
						flex: 0 0 0
						min-width: 0.7em
						padding: 0.025em
						background-color: transparent
						&.arrow
							display: none
							min-width: 1em
							padding: 0.12em 0.05em 0.08em 0.45em
							background-color: transparent
							border-radius: 1%
							&.v
								display: block
							> svg
								width:  auto
								height: 100%
								transform-origin: 50% 50%
								transform: rotate(0deg)
								> .a
									fill: silver
								> .b
									fill: slategray
					// }}}
			> .section
				// shift child sections to the right
				padding: 0 0 0 0.2em
				min-height: 0
				height:  0
				opacity: 0
				display: none
				overflow: hidden
			&.o1
				> .title > div
					> h3
						color: darkslategray
					> button.arrow
						> svg
							transform: rotate(180deg)
							> .a
								fill: slategray
							> .b
								fill: silver
				> .section
					display: block
					height:  auto
					opacity: 1
			// }}}
			// unlocked
			&.v
				&.o0
					&.e0.h1 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> h3
								color: darkslategray
							> button.arrow
								> svg
									> .a
										fill: darkslategray
									> .b
										fill: gainsboro
					// }}}
					&.e1.h1 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> button.arrow
								> svg
									> .a
										fill: darkslategray
									> .b
										fill: gainsboro
					// }}}
					&.e1.h2 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> h3
								color: darkslategray
					// }}}
				&.o1
					&.e0.h1 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> h3
								color: alpha(darkslategray, 0.8)
							> button.arrow
								> svg
									> .a
										fill: silver
									> .b
										fill: slategray
					// }}}
					&.e1.h1 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> button.arrow
								> svg
									> .a
										fill: silver
									> .b
										fill: slategray
					// }}}
					&.e1.h2 // {{{
						> .title > div
							background-color: alpha(slategray, 0.04)
							> h3
								color: alpha(darkslategray, 0.8)
					// }}}
				&.o0,
				&.o1
					&.f // {{{
						> .title > div
							background-color: alpha(slateblue, 0.04)
						> .sep
							fill: alpha(slateblue, 0.6)
						&.e0
							> .title
								> button.arrow
									background-color: alpha(mediumslateblue, 0.03)
									> svg
										> .a
											fill: silver
										> .b
											fill: alpha(slateblue, 0.5)
						&.e1
							> .title
								> button.arrow.f
									background-color: alpha(mediumslateblue, 0.03)
									> svg
										> .a
											fill: silver
										> .b
											fill: alpha(slateblue, 0.5)
					// }}}
				&.active
					// {{{
					> .title > h3
						color: slateblue
						filter: brightness(80%)
					// }}}
				////
	// }}}
	&.section.category-filter // {{{
		.item
			// unchecked/intermediate
			> .title > div > h3
				padding-left: 0
			// checked
			&.x2
				> .title > div > h3
					padding-left: 0.1em
					color: darkslategray
			&.v
				&.o0.e1.hhh // {{{
					> .title
						> h3.h
							background-color: alpha(lightslategray, 0.04)
						> button.sm-checkbox
							background-color: alpha(lightslategray, 0.04)
					// }}}
				&.o1.e1.hhh // {{{
					> .title
						> h3.h
							color: alpha(darkslategray, 0.8)
						> button.arrow.h
							> svg
								> .a
									fill: silver
								> .b
									fill: slategray
					// }}}
				////
				//=== CLOSED {{{
				&.checked
					> .title > h3
						color: darkslategray
					&.c1 > .title > button.checkbox > svg
						background-color: black
						> .c1
							fill: white
					&.c2 > .title > button.checkbox > svg
						background-color: black
						> .c2
							fill: white
				&.hovered-2
					> .title
						> button.checkbox
							background-color: alpha(lightslategray, 0.04)
							> svg
								background-color: alpha(gainsboro, 0.4)
								border-color: slateblue
						> h3
							color: darkslategray
							background-color: alpha(lightslategray, 0.04)
						> button.arrow
							background-color: transparent
							> svg
								fill: silver
								stroke: slategray
				&.focused-2
					> .title
						> h3
							color: darkslateblue
							background-color: alpha(mediumslateblue, 0.04)
						> button.checkbox
							background-color: alpha(mediumslateblue, 0.04)
							> svg
								box-shadow: inset 0 0 0 1px mediumslateblue
								border-color: darkslateblue
					&.checked
						&.c1 > .title > button.checkbox > svg
							background-color: darkslateblue
						&.c2 > .title > button.checkbox > svg
							background-color: darkslateblue
				// }}}
				//=== OPENED {{{
				&.o
					> .title
						> h3
							color: darkslategray
						> button.arrow > svg
							fill: darkslategray
					&.hovered-2
						> .title
							> h3
								color: alpha(darkslategray, 0.8)
							> button.arrow > svg
								fill: silver
								stroke: slategray
					&.focused-2
						> .title
							> h3
								color: alpha(darkslateblue, 0.8)
				// }}}
	// }}}
	&.section.price-filter // {{{
		// rootBox
		> div > .section > div
			width:  100%
			height: var(--height)
			font-size: var(--font-size)
			display: flex
			flex-direction: row
			align-items: center
			// text inputs: [left][delimiter][right]
			> div // {{{
				position: relative
				flex: 3 1 0
				height: 100%
				display: flex
				flex-direction: row
				align-items: center
				touch-action: none
				> input
					width:  100%
					height: 100%
					font-family: WebSafeFontMono
					font-size:   1.2em
					font-weight: bold
					padding: 0.6em 0 0.3em 0
					background-color: gainsboro
					border: 1px solid silver
					border-radius: 2px
					box-shadow: inset 0 0 10px 0 silver
					touch-action: none
				> label
					position:  absolute
					top:       0
					width:     100%
					font-family: WebSafeFontUI
					font-size:   0.8em
					font-weight: bold
					padding: 0.2em 0 0 0
					background-color: transparent
					color: slategray
					user-select: none
					cursor: text
				&.L
					> input
						border-right-width: 0
						border-top-right-radius: 0
						border-bottom-right-radius: 0
						padding-right: 0.6em
						text-align: right
					> label
						padding-right: 0.4em
						text-align: right
				&.R
					> input
						border-left-width: 0
						border-top-left-radius: 0
						border-bottom-left-radius: 0
						padding-left: 0.6em
						text-align: left
					> label
						padding-left: 0.4em
						text-align: left
			// }}}
			> svg // {{{
				flex: 1 3 0
				height: var(--height)
				max-width: 48px
				fill: silver
				touch-action: none
				> .L
					fill: darkgray
				> .X
					fill: transparent
				> .R
					fill: darkgray
			// }}}
		////
		> div.v // {{{
			> .section > div
				> svg
					> .X
						fill: lightgray
				> div
					> input
						color: darkslategray
						&::selection
							background-color: darkslateblue
							color: gainsboro
					&.hovered
						> input
							border-color: gray
							box-shadow: inset 0 0 0 2px silver
					&.hovered:not(.focused)
						> input,
						> label
							cursor: ns-resize
					&.focused
						> input
							color: black
							background-color: alpha(gainsboro, 0.6)
							border-color: gray
							box-shadow: inset 0 0 0 2px silver
						> label
							cursor: pointer
							&:hover
								color: slateblue
					&.locked
						> input
							color: darkslategray
							background-color: gainsboro
							border-color: silver
							&::selection
								background-color: darkslategray
								color: gainsboro
			////
			&.h
				> .section > div > svg > .X
					fill: slategray
			&.h0 > svg > .L
				fill: slategray
				transform: translateX(1px)
			&.h1 > svg > .R
				fill: slategray
				transform: translateX(-1px)
			&.f0,&.f1
				> svg > .X
					fill: slategray
			&.f0 > svg > .L
				fill: slateblue
				transform: translateX(1px)
			&.f1 > svg > .R
				fill: slateblue
				transform: translateX(-1px)
			&.active
				> svg
					filter: brightness(110%)
					> .X
						cursor: pointer
						fill: slateblue
						&:hover
							fill: alpha(slateblue, 0.4)
			// }}}
		// end
	// }}}
